!!! 5
%html{ :lang => 'en' }
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0' }

    // Apple Touch
    %link{rel: 'apple-touch-icon', href: image_path('apple-iphone.png')}
    %link{rel: 'apple-touch-icon', sizes: '76x76', href: image_path('apple-ipad.png')}
    %link{rel: 'apple-touch-icon', sizes: '120x120', href: image_path('apple-iphone@2x.png')}
    %link{rel: 'apple-touch-icon', sizes: '152x152', href: image_path('apple-ipad@2x.png')}

    // Favicon
    %link{rel: 'icon', type: 'image/png', href: image_path('favicon.png')}

    %title= current_page.data.title || 'The Distributed Church'
    = stylesheet_link_tag 'application'

  %body
    = yield
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'
    = javascript_include_tag 'application'
