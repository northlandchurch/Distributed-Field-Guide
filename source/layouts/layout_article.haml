= wrap_layout :layout do
  .article
    - if current_page.data.header_image
      .article-image
        = partial current_page.data.header_image
    %h4.article-subtitle
      = current_page.data.section_title
    %h1= current_page.data.title
    = yield

    .pagination
      - prev_article = current_page.data.previous_article
      - if prev_article
        = link_to prev_article, class: 'pagination-previous' do
          = partial '/assets/images/arrow-left.svg'

      - next_article = current_page.data.next_article
      - if next_article
        = link_to next_article, class: 'pagination-next' do
          = partial '/assets/images/arrow-right.svg'

  = partial 'shared/navigation'
  = partial 'shared/footer'
