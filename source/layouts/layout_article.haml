= wrap_layout :layout do
  .article
    - if current_article.data.header_image
      .article-image
        = image_tag("/assets/images/" + current_article.data.header_image)
    %h4.article-subtitle
      = current_article.data.sectiontitle
    %h1= current_article.title
    = yield

    .pagination
      -# Flip prev and next because of reader format
      - prev_article = current_article.next_article
      - if prev_article
        = link_to prev_article, class: 'pagination-previous' do
          = partial '/assets/images/arrow-left.svg'

      - next_article = current_article.previous_article
      - if next_article
        = link_to next_article, class: 'pagination-next' do
          = partial '/assets/images/arrow-right.svg'

  = partial 'shared/navigation'
  = partial 'shared/footer'
